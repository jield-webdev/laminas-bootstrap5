{
  "name": "jield-webdev/laminas-bootstrap5",
  "description": "Laminas Module that provides helper functions for Bootstrap 5",
  "type": "library",
  "keywords": [
    "bootstrap",
    "module",
    "laminas"
  ],
  "license": "MIT",
  "homepage": "https://github.com/jield-webdev/laminas-bootstrap5",
  "authors": [
    {
      "name": "Johan van der Heide",
      "email": "info@jield.nl",
      "homepage": "https://jield.nl"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "~8.3.0 || ~8.4.0",
    "laminas/laminas-form": "^3.22",
    "laminas/laminas-navigation": "^2.21 ",
    "laminas/laminas-view": "^2.36",
    "laminas/laminas-modulemanager": "^2.18",
    "laminas/laminas-servicemanager": "^3.23 || ^4.0",
    "laminas/laminas-i18n": "^2.29",
    "jield-webdev/laminas-assetmanager": "^4.0",
    "jield-webdev/jield-search": "^2.1"
  },
  "require-dev": {
    "iteaoffice/testing": "^5.1-dev"
  },
  "autoload": {
    "psr-4": {
      "LaminasBootstrap5\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LaminasBootstrap5Test\\": "test"
    }
  },
  "config": {
    "vendor-dir": "vendor",
    "optimize-autoloader": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/package-versions-deprecated": true
    }
  },
  "extra": {
    "laminas": {
      "module": "LaminasBootstrap5"
    },
    "branch-alias": {
      "dev-master": "2.0-dev",
      "dev-develop": "2.1-dev"
    }
  },
  "scripts": {
    "check": [
      "@php-lint",
      "@phpstan",
      "@cs",
      "@test"
    ],
    "fix": [
      "@cbf",
      "@cs-fix"
    ],
    "php-lint": "./vendor/bin/parallel-lint src",
    "phpstan": "./vendor/bin/phpstan analyse src/ --level=1 --memory-limit=2G",
    "cs": "./vendor/bin/phpcs -n -p --standard=PSR2 --extensions=php,twig src",
    "cbf": "./vendor/bin/phpcbf src --standard=PSR2",
    "cs-fix": "./vendor/bin/php-cs-fixer fix -v src",
    "test": "./vendor/bin/phpunit"
  }
}
